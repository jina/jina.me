.container {
  padding: {
    right: $gutter-width-large;
     left: $gutter-width-large;
  }
}

%column { padding: $spacing-vertical-large 0; }

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %clearfix-<%= resolution.target %> {
      &:before,
      &:after {
        display: table;
        content: " ";
      }

      &:after { clear: both; }
    }
  }
<% end %>



@include breakpoint($tablet-large) {
  .container {
    @extend %clearfix-tablet-large;
    margin: 0 auto;
    max-width: 102.4rem;
  }

  %column {
    padding: {
      top: 0;
      bottom: $spacing-vertical-xx-large;
    }
  }

  .tile-photos {
    &-2,
    &-3,
    &-4 {
      @extend %clearfix-tablet-large;
      margin-right: -32rem;

      a {
        float: left;
        border: 0;
        padding: 0;
      }
    }

    &-2 a { width: 50%; }
    &-3 a { width: (100 / 3) * 1%; }
    &-4 a { width: 25%; }
  }
}



.text-align--left {
  text-align: left;
}

.text-align--center {
  text-align: center;
}

.text-align--right {
  text-align: right;
}



.media {
  display: flex;
  align-items: flex-start;

  &__figure {
    flex-shrink: 0;
    margin-right: 1em;
  }

  &__body {
    flex: 1;
    min-width: 0;
  }

  &__body,
  &__body :last-child {
    margin-bottom: 0;
  }
}

.media--small .media__figure {
  margin-right: .5em;
}

.media--large .media__figure {
  margin-right: 2em;
}

.media--center {
  align-items: center;
}

.media--double {

  > .media__figure {
    order: 1;
  }
  .media__figure--reverse {
    order: 3;
    margin: 0 0 0 2em;
  }
  .media__body  {
    order: 2;
  }
}

.media--reverse {

  > .media__figure {
    order: 1;
    margin: 0 0 0 1em;
  }
}

.media--reverse.media--small .media__figure {
  margin-left: .5em;
}

@media (max-width: 39.9375em) {

  .media--responsive {
    display: block;

    .media__figure {
      margin-right: 0;
    }
  }
}
