<% data.layout.resolutions.each_with_index do |resolution, index| %>
$<%= resolution.target %>: <%= resolution.width %>px;
<% end %>

$line-height: 1.5;

$base-font-size: 16px;
$base-line-height: $base-font-size * $line-height;

$breakpoint-to-ems: true;

$ms-base: 1rem;
$ms-range:
  1.2 20em,
  1.3 30em,
  1.4 40em,
  1.5 50em,
  1.6 60em;

$spacing-vertical:          ($base-line-height / 20px) * 1rem;
$spacing-vertical-small:    $spacing-vertical / 2;
$spacing-vertical-large:    $spacing-vertical * 2;
$spacing-vertical-x-large:  $spacing-vertical * 4;
$spacing-vertical-xx-large: $spacing-vertical * 8;

$gutter-width: ($base-font-size / 10px) * 1rem;
$gutter-width-small: $gutter-width / 2;
$gutter-width-large: $gutter-width * 2;

$height-footer: 12rem;

$font-weight-strong: 600;

$font-family-heading: "freight-sans-pro", "Helvetica Neue", Helvetica, sans-serif;

$black: #000;
$grey: #333;
$white: #fff;
$red: #eb0012;
$maroon: #790009;
$color-primary: $black;
$color-border:  rgba($black, .125);
