.list {
  &-menu,
  &-details { list-style: none; }

  &-details {
    li {
      @extend %block-text;

      + li > hr { margin-top: 9.5rem; }
    }

    article > h1:first-child {
      @include ms-respond(font-size, 3.588057);
    }
  }

  &-menu { text-align: center; }
}

@include breakpoint($tablet-small) {
  .list {
    &-menu {
      margin: {
        right: -$gutter-width-small;
         left: -$gutter-width-small;
      }
      list-style: none;

      li {
        display: inline-block;
        margin-right: -0.4rem;
        padding: {
          right: $gutter-width-small;
           left: $gutter-width-small;
        }
      }
    }

    &-details {
      span { white-space: nowrap; }

      article > h1 { margin-right: -35.2rem; }
    }
  }
}
